<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/butt1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/butt2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt1"/>
    <Button
        android:id="@+id/butt3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt2"/>
    <Button
        android:id="@+id/butt4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt3"/>
    <Button
        android:id="@+id/butt5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt4"/>
    <Button
        android:id="@+id/butt6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt5"/>
    <Button
        android:id="@+id/butt7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt6"/>
    <Button
        android:id="@+id/butt8"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt7"/>
    <Button
        android:id="@+id/butt9"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/butt8"/>

</androidx.constraintlayout.widget.ConstraintLayout>